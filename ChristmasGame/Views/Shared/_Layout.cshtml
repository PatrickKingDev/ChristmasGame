<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/ressources/styles/stylesheet.css">
    <link rel="stylesheet" href="~/ressources/styles/main.css">
</head>
<body>
    <main>
        <header>
            <img class="floating-bg" src="~/ressources/images/top.png" aria-hidden="true" />
        </header>
        <div class="content">
            <h1>Joyeux Noel !</h1>
            @RenderBody()
        </div>
        <footer>
            <img class="floating-bg" src="~/ressources/images/bottom.png" aria-hidden="true" />
        </footer>
    </main>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
